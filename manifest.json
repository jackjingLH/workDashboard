{
  "manifest_version": 3,
  "name": "工作流聚合助手",
  "version": "1.0.0",
  "description": "聚合 OA、禅道、GitLab 等多个工作平台的待办事项",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "工作流聚合助手"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "cookies",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
